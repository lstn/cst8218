<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.lestienne.androidlab.currencyexchangecalculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To which currency do you want to exchange?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <Spinner
        android:id="@+id/currencySpinner"
        android:layout_width="128dp"
        android:layout_height="37dp"
        android:layout_marginBottom="406dp"
        android:layout_marginLeft="53dp"
        android:background="@android:color/darker_gray"
        android:entries="@array/currency_values"
        android:entryValues="@array/currency_array"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/exchangeButton"
        android:layout_width="82dp"
        android:layout_height="37dp"
        android:layout_marginBottom="406dp"
        android:layout_marginRight="52dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="exchangeStart"
        android:text="GO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
